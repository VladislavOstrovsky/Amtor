extends ../layouts/default

block variables
  - const title = "VIN запросы";

block styles
    link(rel="stylesheet" href="./styles/lc.css")

block content
  div#page
    include ../../blocks/components/header/mobile_menu
    div.page
      include ../../blocks/modules/header/header-auth
      div.container
        div.bread-crumbs
          a(href='./home.html' class='text_bc bread-crumbs_item') Главная
          a(href='./lc-main.html' class='text_bc bread-crumbs_item') Личный кабинет
          span.text_bc.bread-crumbs_item VIN запросы
        h1.title_p VIN запросы
      div.container
        div.personal_account.__vin_requests
          include ../../blocks/modules/lc/lc-menu/lc-menu
          div.pa_content
            include ../../blocks/modules/lc/lc-author-card
            include ../../blocks/modules/lc/lc-menu/lc-menu-mobile
            div.pac_vin_requests_table
              include ../../blocks/components/table/lc-vin-requests/table
              a(href="./lc-vin-requests-req.html" class='btn success big') Создать новый запрос

      include ../../blocks/modules/footer/footer

block scripts
  script(src="js/main.js")
  script(src="js/lc.js")
  script(src="js/vendor.js")
