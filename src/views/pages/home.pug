block styles
	link(rel="stylesheet" href="./styles/home.css")

block content
	div#page
		include ../../blocks/components/header/mobile_menu
		div.page
			include ../../blocks/modules/header/header
			div.container
				div.home_sliders_wrapper
					div.home-slider-main
						each slide in mainSlider
							include ../../blocks/components/home/slider-main
					div.home-slider-extra
						h1.title Товар дня
						div.home-slider-extra-wp
							each slide in extraSlider
								include ../../blocks/components/home/slider-extra
			div.container
				div.home_sub_menu_wrapper
					div.hsm_item
						img(class='hsmi__image' src='./img/home/sub_category_1.png')
