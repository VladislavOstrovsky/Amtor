			div.container
				include ../../blocks/components/slider/home-slieder-top
			div.container
				include ../../blocks/components/home/feedback_form/base
			include ../../blocks/components/home/product_categories/engine_parts
			include ../../blocks/components/home/product_categories/suspension
			include ../../blocks/components/home/product_categories/interior_exterior
			include ../../blocks/components/home/product_categories/for_garage_car_service
			include ../../blocks/components/home/about_company
			include ../../blocks/modules/footer/footer

