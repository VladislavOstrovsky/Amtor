							span.icon
								include ../../img/svg/arrow-left.svg
					div.hsm_item
						img(class='hsmi__image' src='./img/home/sub_category_3.png')
						div.hsmi_content
							h1.title Каталог ТО
							h1.description свыше 392 000 запчастей
						button(type='button' class='btn success iconButton')
							span.icon
