extends ../layouts/default

block variables
  - const title = "Личный кабинет";

block styles
    link(rel="stylesheet" href="./styles/lc.css")

block content
  div#page
    include ../../blocks/components/header/mobile_menu
    div.page
      include ../../blocks/modules/header/header-auth
      div.container
        div.bread-crumbs
          a(href='./home.html' class='text_bc bread-crumbs_item') Главная
          span.text_bc.bread-crumbs_item Личный кабинет
        h1.title_p Личный кабинет
      div.container
        div.personal_account.__main
          include ../../blocks/modules/lc/lc-author-card
          include ../../blocks/modules/lc/lc-menu-cards
      include ../../blocks/modules/footer/footer

block scripts
  script(src="js/lc.js")
  script(src="js/main.js")
  script(src="js/vendor.js")
