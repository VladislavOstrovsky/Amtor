extends ../layouts/default

block variables
  - const title = "Корзина";

block styles
    link(rel="stylesheet" href="./styles/errors.css")

block content
  div#page
    include ../../blocks/components/header/mobile_menu
    div.page
      include ../../blocks/modules/header/header
      div.container
        div.bread-crumbs
          a(href='./home.html' class='text_bc bread-crumbs_item') Главная
          span.text_bc.bread-crumbs_item Корзина
        h1.title_p Корзина
      div.container
        div.page_center_wrapper.empty_basket
          div.content_image
            include ../../img/svg/extra/basket-empty.svg
          div.content_text Ваша корзина пока пуста
      include ../../blocks/modules/footer/footer

block scripts
  script(src="js/main.js")
  script(src="js/vendor.js")
