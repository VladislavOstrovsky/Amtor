extends ../layouts/default

block variables
  - const title = "Корзина";

block styles
    link(rel="stylesheet" href="./styles/lc.css")

block content
  div#page
    include ../../blocks/components/header/mobile_menu
    div.page
      include ../../blocks/modules/header/header-auth
      div.container
        div.bread-crumbs
          a(href='./home.html' class='text_bc bread-crumbs_item') Главная
          a(href='./lc-main.html' class='text_bc bread-crumbs_item') Личный кабинет
          span.text_bc.bread-crumbs_item Корзина
        h1.title_p Корзина
      div.container
        div.personal_account.__basket
          include ../../blocks/modules/lc/lc-menu/lc-menu
          div.pa_content
            include ../../blocks/modules/lc/lc-author-card
            include ../../blocks/modules/lc/lc-menu/lc-menu-mobile
            div.pac_basket_table
              include ../../blocks/components/table/basket/basket-table
              div.pacb_actions
                button(class='btn link js-basket-remove' type='button') Удалить отмеченные
                div.pacba_right
                  p.text Итого <span id="js-lc-basket-all-count">5</span> позиций на сумму: <span id="js-lc-basket-all-price">6 250</span> руб.
                  a(href='#' class='btn success big js-pay-order') Оплатить заказ

      include ../../blocks/modules/footer/footer

block scripts
  script(src="js/main.js")
  script(src="js/lc.js")
  script(src="js/vendor.js")
