      button(type='button' class='btn success login-btn') Войти
      //button(type='button' class='btn transparent iconButton login-btn')
        span.icon
          include ../../../img/svg/header/user-login-dark.svg
        span.icon._arrow
      button(type='button' class='btn transparent iconButton withText basket-btn')
        span.icon
          include ../../../img/svg/header/basket-dark.svg
        span.text В корзине <br> нет товаров
    div.search_block.dFlex
      div.btn_burger
        span.burger_line._1
        span.burger_line._2
        span.burger_line._3
      input(type='text' class='input search-input' placeholder='VIN, frame или номер детали')
      button(type='button' class='btn success search-btn') Найти
