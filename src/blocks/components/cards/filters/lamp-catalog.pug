- var manufacturers = ['AMIWA', 'AUTO-GUR', 'AVS', 'AWM', 'AYMPARTS', 'AMIWA 2', 'AUTO-GUR 2'];
- var type = ['Би-ксенон', 'Галоген', 'Ксеноновый', 'Накаливания', 'Светодиодный', 'Би-ксенон 2', 'Ксеноновый 2'];
// change
- var firstDiameter = 12; // 12-24
- var spikes = ['Есть', 'Нет'];
- var season = ['Лето', 'Зима', 'Всесезонная'];
- var firstLoadIndex = 70; // 70-123

div.mobile_show_filters
  button(type="button" class='btn transparent fullWidth js-show-filters') Показать фильтр
div.filter_cards
  form(action='/' class='fc_form' method='post')
    div.fc_item.__open
      div.fci_header
        h2.title Производитель
        span.icon
          include ../../../../img/svg/arrow-dark.svg
      div.fci_input
        input(type='text' class='input dark' name="name-manufacturers" placeholder='Найти производителя')
      div.fci_inner.grid_one_column.js-custom-scroll
        each value in manufacturers
          label(for=value class='checkbox-container') #{value}
            input(id=value type='checkbox' name="manufacturers")
            span.checkmark
    div.fc_item.__open
      div.fci_header
        h2.title Тип
        span.icon
          include ../../../../img/svg/arrow-dark.svg
      div.fci_input
        input(type='text' class='input dark' name="name-type" placeholder='Выберите модель')
      div.fci_inner.grid_one_column.js-custom-scroll
        each value in type
          label(for=value class='checkbox-container') #{value}
            input(id=value type='checkbox' name="type")
            span.checkmark
    div.fc_item
      div.fci_header
        h2.title Тип патрона
        span.icon
          include ../../../../img/svg/arrow-dark.svg
      div.fci_inner.js-custom-scroll
        while firstDiameter < 25
          label(for=firstDiameter class='checkbox-container') #{firstDiameter++}
            input(id=firstDiameter - 1 type='checkbox' name="typePatron")
            span.checkmark
    div.fc_item
      div.fci_header
        h2.title Тип ламп
        span.icon
          include ../../../../img/svg/arrow-dark.svg
      div.fci_inner.grid_two_column
        each value in spikes
          label(for=value class='checkbox-container') #{value}
            input(id=value type='checkbox' name="lampType")
            span.checkmark
    div.fc_item
      div.fci_header
        h2.title Напряжение, В
        span.icon
          include ../../../../img/svg/arrow-dark.svg
      div.fci_inner.grid_one_column
        each value in season
          label(for=value class='checkbox-container') #{value}
            input(id=value type='checkbox' name="voltage")
            span.checkmark
    div.fc_item
      div.fci_header
        h2.title Номинальная мощность, Вт
        span.icon
          include ../../../../img/svg/arrow-dark.svg
      div.fci_inner.js-custom-scroll
        while firstLoadIndex < 124
          label(for=firstLoadIndex class='checkbox-container') #{firstLoadIndex++}
            input(id=firstLoadIndex - 1 type='checkbox' name="ratedPower")
            span.checkmark
    div.fc_buttons
      button(type='submit' class='btn success js-filters-submit') Применить фильтр
      button(type='button' class='btn reset-filters js-filters-reset') Сбросить
